<div class="row omb_login">
  <h3 class="omb_authTitle"><%= t ".heading" %></h3>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @album], html: {name: "album-form"} do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group">
        <%= f.label :name, t(".album_name") %><br/>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :artist_id, t(".singer") %><br/>
        <%= f.select :artist_id,
          options_for_select(@support.singers),
          autofocus: true, class: "form-control" %>
        <%= link_to t(".create_new"), new_admin_artist_path %>
      </div>
      <div class="form-group">
        <%= f.label :album_type %><br/>
        <%= f.select :album_type,
          options_for_select(@support.album_types),
          class: "form-control" %>
      </div>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="form-group" id="songs_field">
        <%= f.fields_for :songs do |builder| %>
          <%= render "song_fields", f: builder %>
        <% end %>
        <%= link_to_add_field t(".add_fields"), f, :songs %>
      <%= f.submit t(".submit"), class: "btn btn-primary btn-block btn-lg" %>
    <% end %>
  </div>
</div>
