<h3><%= t ".heading" %></h3>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @album do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group">
        <%= f.label :name, t(".album_name") %><br/>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <%= f.submit t(".submit"), class: "btn btn-primary btn-block btn-lg" %>
    <% end %>
  </div>
</div>
