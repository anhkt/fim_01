<% @user ||= current_user %>
<div class="stats">
  <%= link_to t(".following"), relationships_path,
    title: "following", id: @user %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
  <%= link_to t(".followers"), relationships_path,
    id: @user, title: "followers" %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
</div>
